<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.property.mapper.EducationMapper">

    <resultMap id="educationResultMap" type="Education">
        <id property="id" column="id" />
        <result property="timeStamp" column="time_stamp" />
        <result property="resumeId" column="resume_id" />
        <result property="rowNum" column="row_num" />
        <result property="beginDate" column="begin_date" />
        <result property="endDate" column="end_date" />
        <result property="school" column="school" />
        <result property="major" column="major" />
        <result property="edu" column="edu" />
        <result property="type" column="type" />
    </resultMap>

    <delete id="deleteEducations">
        DELETE FROM education WHERE id in
        <foreach collection="list" item="item" open="("
                 separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <update id="updateEducation" parameterType="com.property.pojo.Education">
        UPDATE education SET begin_date = #{beginDate}, end_date = #{endDate}, major = #{major},
                             school = #{school}, edu = #{edu}, type = #{type}
        WHERE id = #{id}
    </update>

    <insert id="insertEducation" parameterType="com.property.pojo.Education" useGeneratedKeys="true">
        INSERT INTO education(ROWNUM, RESUME_ID, BEGIN_DATE, END_DATE, SCHOOL, MAJOR, EDU, TYPE)
        VALUES (#{rowNum}, #{resumeId}, #{beginDate}, #{endDate}, #{school}, #{major}, #{edu}, #{type})
    </insert>

    <select id="getEducation" parameterType="integer" resultMap="educationResultMap">
        SELECT * FROM education WHERE resume_id = #{resumeId}
    </select>
</mapper>